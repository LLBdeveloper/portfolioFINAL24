---
import Chat from './Chat.astro';
---

<div class="overflow-hidden mx-2 p-1 sm:m-5 sm:p-5 h-full w-full border-4 border-neutral-800 rounded-3xl bg-position-center bg-size-auto bg-cover bg-image" style="background-image: url('https://firebasestorage.googleapis.com/v0/b/portfolioreacttailwind.appspot.com/o/moon2.jpg?alt=media&token=b4244afd-8180-4cf7-a73c-e4cd6c868dfc');">

    <div class="flex sm:justify-start justify-center sm:mb-10 sm:m-10 mt-5">
        <img src="https://firebasestorage.googleapis.com/v0/b/portfolioreacttailwind.appspot.com/o/galaxy2.png?alt=media&token=ef723c52-9ec5-41dc-973d-7c71490a98c6" class="h-[2rem] sm:h-[3rem] md:h-[4rem] lg:h-[5rem] xl:h-[6rem] me-5" alt="">
        <h2 class="text-xl sm:text-5xl md:text-6xl lg:text-7xl bg-clip-text text-transparent bg-gradient-to-r from-purple-500 to-pink-500 font-extrabold">
            ABOUT 
        </h2>
    </div>

    <div class="overflow-hidden flex justify-center items-center">

        <Chat />

        <!-- Desktop -->
        <div class="max-w-[20rem] me-10 hidden lg:flex flex-col justify-center items-center">
            <img src="https://firebasestorage.googleapis.com/v0/b/portfolioreacttailwind.appspot.com/o/alien.png?alt=media&token=9fd63c48-49ca-4f53-b38b-6e41524e3170" class="mb-5 hidden lg:flex w-full lg:w-[15rem] xl:w-[20rem]" alt="">
            <a href="/MoreAboutMe" class="relative inline-flex items-center justify-center text-center p-1 mb-2 me-2 overflow-hidden text-xl font-medium text-white rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
                <span class="w-[15rem] relative px-5 py-2.5 transition-all ease-in duration-75 bg-black dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                    MORE ABOUT ME !
                </span>
            </a>
            <a href="/cv-frontEnd.pdf" download class="relative inline-flex items-center justify-center p-1 mb-2 me-2 overflow-hidden text-xl font-medium text-white rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
                <span class="flex items-center w-[15rem] relative px-5 py-2.5 transition-all ease-in duration-75 bg-black dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                    <svg class="w-9 h-9 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M14.707 7.793a1 1 0 0 0-1.414 0L11 10.086V1.5a1 1 0 0 0-2 0v8.586L6.707 7.793a1 1 0 1 0-1.414 1.414l4 4a1 1 0 0 0 1.416 0l4-4a1 1 0 0 0-.002-1.414Z"/>
                        <path d="M18 12h-2.55l-2.975 2.975a3.5 3.5 0 0 1-4.95 0L4.55 12H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-4a2 2 0 0 0-2-2Zm-3 5a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"/>
                    </svg>
                    DOWNLOAD CV
                </span>
            </a>
        </div>

    </div>

    <!-- Mobile -->
    <div class="w-full text-center sm:hidden mt-10">
        <img src="https://firebasestorage.googleapis.com/v0/b/portfolioreacttailwind.appspot.com/o/alien.png?alt=media&token=9fd63c48-49ca-4f53-b38b-6e41524e3170" class="mb-5 hidden lg:flex w-full lg:w-[15rem] xl:w-[20rem]" alt="">
        <a href="/MoreAboutMe" class="relative inline-flex items-center justify-center p-1 mb-2 me-2 overflow-hidden text-md font-medium text-white rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
            <span class="w-[10rem] relative px-5 py-2.5 transition-all ease-in duration-75 bg-black dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                MORE ABOUT ME !
            </span>
        </a>
        <a href="/cv-frontEnd.pdf" download class="relative inline-flex items-center justify-center p-1 mb-2 me-2 overflow-hidden text-md font-medium text-white rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
            <span class="w-[10rem] relative px-5 py-2.5 transition-all ease-in duration-75 bg-black dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                DOWNLOAD CV
            </span>
        </a>
    </div>

</div>
